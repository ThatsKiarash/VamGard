@{
    ViewData["Title"] = "تغییر رمز عبور";
}
<div class="card bg-white p-4" style="border-radius:16px;border:none;box-shadow:0 2px 10px rgba(0,0,0,.05);max-width:500px;">
    <h5 class="fw-bold mb-3"><i class="bi bi-shield-lock"></i> تغییر رمز عبور</h5>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <form method="post" asp-action="ChangePassword">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">رمز عبور فعلی</label>
            <input type="password" name="currentPassword" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">رمز عبور جدید</label>
            <input type="password" name="newPassword" class="form-control" required minlength="6" />
        </div>
        <div class="mb-3">
            <label class="form-label">تکرار رمز عبور جدید</label>
            <input type="password" name="confirmPassword" class="form-control" required minlength="6" />
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg"></i> تغییر رمز</button>
        <a asp-action="Index" class="btn btn-outline-secondary">انصراف</a>
    </form>
</div>
