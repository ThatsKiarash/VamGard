@model List<Loan>
@{ ViewData["Title"] = "مدیریت وام‌ها"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="text-muted mb-0">@Model.Count وام</p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> وام جدید</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>عنوان</th>
                        <th>بانک</th>
                        <th>نوع</th>
                        <th>سود</th>
                        <th>وضعیت</th>
                        <th>ویژه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loan in Model)
                    {
                        <tr>
                            <td>@loan.Id</td>
                            <td>
                                <a href="/vam/@loan.Slug" target="_blank" class="fw-bold text-decoration-none">@loan.Title</a>
                            </td>
                            <td>@loan.Bank.Name</td>
                            <td>@loan.LoanType.Name</td>
                            <td>@(loan.InterestRate.HasValue ? $"{loan.InterestRate}%" : "-")</td>
                            <td>
                                <form asp-action="ToggleActive" asp-route-id="@loan.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm @(loan.IsActive ? "btn-success" : "btn-danger")" style="min-width: 70px;">
                                        @(loan.IsActive ? "فعال" : "غیرفعال")
                                    </button>
                                </form>
                            </td>
                            <td>
                                @if (loan.IsFeatured)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@loan.Id" method="post" style="display:inline;" onsubmit="return confirm('آیا مطمئنید؟')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
