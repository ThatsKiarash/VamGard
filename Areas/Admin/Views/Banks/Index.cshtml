@model List<Bank>
@{ ViewData["Title"] = "مدیریت بانک‌ها"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="text-muted mb-0">@Model.Count بانک</p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> بانک جدید</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>نام</th>
                    <th>اسلاگ</th>
                    <th>ترتیب</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bank in Model)
                {
                    <tr>
                        <td>@bank.Id</td>
                        <td class="fw-bold">@bank.Name</td>
                        <td><code>@bank.Slug</code></td>
                        <td>@bank.DisplayOrder</td>
                        <td>
                            @if (bank.IsActive)
                            {
                                <span class="badge bg-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غیرفعال</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@bank.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@bank.Id" method="post" style="display:inline;" onsubmit="return confirm('آیا مطمئنید؟')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
