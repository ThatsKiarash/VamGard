<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "پنل مدیریت") | وام‌گرد - ادمین</title>
    <meta name="robots" content="noindex, nofollow" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100..900&display=swap" rel="stylesheet" />
    <style>
        * { font-family: 'Vazirmatn', Tahoma, sans-serif; }
        body { background: #f0f2f5; }

        .admin-sidebar {
            background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
            min-height: 100vh;
            width: 260px;
            position: fixed;
            right: 0;
            top: 0;
            z-index: 100;
            padding-top: 0;
            box-shadow: -4px 0 20px rgba(0,0,0,.1);
        }
        .admin-sidebar .brand {
            padding: 1.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,.1);
        }
        .admin-sidebar .brand h5 {
            color: #fff;
            font-weight: 800;
            margin: 0;
        }
        .admin-sidebar .brand small {
            color: rgba(255,255,255,.5);
            font-size: .8rem;
        }
        .admin-sidebar .nav-link {
            color: rgba(255,255,255,.7);
            padding: .8rem 1.5rem;
            font-weight: 500;
            transition: all .2s;
            border-radius: 0;
            display: flex;
            align-items: center;
            gap: .75rem;
        }
        .admin-sidebar .nav-link:hover,
        .admin-sidebar .nav-link.active {
            color: #fff;
            background: rgba(255,255,255,.1);
        }
        .admin-sidebar .nav-link i {
            width: 20px;
            text-align: center;
        }

        .admin-content {
            margin-right: 260px;
            padding: 1.5rem 2rem;
        }

        .admin-header {
            background: #fff;
            padding: 1rem 2rem;
            margin-right: 260px;
            box-shadow: 0 2px 10px rgba(0,0,0,.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .stat-card-admin {
            border-radius: 16px;
            padding: 1.5rem;
            border: none;
            box-shadow: 0 2px 10px rgba(0,0,0,.05);
        }
        .stat-card-admin .icon-box {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
        }

        .table th { font-weight: 700; font-size: .85rem; color: #666; }
        .table td { vertical-align: middle; }

        .btn-sm { border-radius: 8px; }
    </style>
</head>
<body>
    <aside class="admin-sidebar">
        <div class="brand">
            <h5><i class="bi bi-arrow-repeat" style="color: #ffd700;"></i> وام‌گرد</h5>
            <small>پنل مدیریت</small>
        </div>
        <nav class="nav flex-column mt-3">
            <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-speedometer2"></i> داشبورد
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Banks" asp-action="Index">
                <i class="bi bi-bank"></i> بانک‌ها
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="LoanTypes" asp-action="Index">
                <i class="bi bi-tags"></i> انواع وام
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Loans" asp-action="Index">
                <i class="bi bi-cash-stack"></i> وام‌ها
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Subscribers" asp-action="Index">
                <i class="bi bi-envelope-at"></i> خبرنامه
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Blog" asp-action="Index">
                <i class="bi bi-journal-richtext"></i> وبلاگ
            </a>
            <hr style="border-color: rgba(255,255,255,.1); margin: 1rem 1.5rem;" />
            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-area="">
                <i class="bi bi-globe2"></i> مشاهده سایت
            </a>
            <form asp-area="Admin" asp-controller="Auth" asp-action="Logout" method="post" style="margin:0;">
                <button type="submit" class="nav-link w-100 border-0 text-start" style="background:none;cursor:pointer;">
                    <i class="bi bi-box-arrow-right"></i> خروج
                </button>
            </form>
        </nav>
    </aside>

    <header class="admin-header">
        <h5 class="mb-0 fw-bold">@(ViewData["Title"] ?? "پنل مدیریت")</h5>
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted" style="font-size: .85rem;">
                <i class="bi bi-person-circle"></i> @(User.FindFirst("DisplayName")?.Value ?? User.Identity?.Name)
            </span>
            <span class="text-muted" style="font-size: .85rem;">
                <i class="bi bi-calendar3"></i> @DateTime.Now.ToString("yyyy/MM/dd")
            </span>
        </div>
    </header>

    <main class="admin-content">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
