@model List<NewsletterSubscriber>
@{ ViewData["Title"] = "اشتراک‌های خبرنامه"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0"><i class="bi bi-envelope-at"></i> اشتراک‌های خبرنامه (@Model.Count نفر)</h4>
    @if (Model.Any())
    {
        <form asp-action="ExportCsv" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-success btn-sm"><i class="bi bi-download"></i> خروجی CSV</button>
        </form>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-envelope" style="font-size:3rem;color:#adb5bd;"></i>
        <p class="mt-3 text-muted">هنوز کسی در خبرنامه عضو نشده.</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>ایمیل</th>
                        <th>نام</th>
                        <th>تاریخ عضویت</th>
                        <th>IP</th>
                        <th>وضعیت</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ var i = 1; }
                    @foreach (var sub in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td><code>@sub.Email</code></td>
                            <td>@(sub.Name ?? "—")</td>
                            <td>@sub.SubscribedAt.ToString("yyyy/MM/dd HH:mm")</td>
                            <td><small class="text-muted">@(sub.IpAddress ?? "—")</small></td>
                            <td>
                                @if (sub.IsActive)
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">غیرفعال</span>
                                }
                            </td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@sub.Id" method="post" class="d-inline" onsubmit="return confirm('حذف شود؟')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
